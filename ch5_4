//ch5_4，switch敘述-根據選擇值來進行加法或減法計算
public class ch5_4 {
    public static void main(String[] args) {
        int a=50,b=20;
        char oper='+';

        switch(oper){
            case '+':
            System.out.println(a+"+"+b+"="+(a+b));
            break;
            case '-':
            System.out.println(a+"-"+b+"="+(a-b));
            break;
            default://沒有相對應選擇值
            System.out.println("Unknown expression!!");
        }
    }
}
